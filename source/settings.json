{
  "name": "Luna",
  "version": "2.4.1",
  "images": [
    {
      "variable": "header",
      "label": "Header image",
      "description": "Transparent background recommended"
    },
    {
      "variable": "background",
      "label": "Repeating background image",
      "description": "200px by 200px image recommended"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow",
      "label": "Slideshow",
      "description": "900px by 500px images recommended"
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Varela Round"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Montserrat"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "secondary_background_color",
      "label": "Secondary background",
      "default": "#F3F3F3"
    },
    {
      "variable": "primary_text_color",
      "label": "Primary text",
      "default": "#111111"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary text",
      "default": "#555555"
    },
    {
      "variable": "link_rollover_color",
      "label": "Link hover",
      "default": "#255B8A"
    },
    {
      "variable": "header_text_color",
      "label": "Header text",
      "default": "#111111"
    },
    {
      "variable": "products_background_color",
      "label": "Product background hover",
      "default": "#000000"
    },
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#b1b1b1"
    },
    {
      "variable": "button_text_color",
      "label": "Button text",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background",
      "default": "#000000"
    },
    {
      "variable": "button_rollover_color",
      "label": "Button hover background",
      "default": "#255B8A"
    }
  ],
  "options": [
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..6",
      "default": 2,
      "description": "The number of custom page links to display in the main navigation."
    },
    {
      "variable": "featured_items",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products featured on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "max_products_per_row",
      "label": "Maximum products per row",
      "type": "select",
      "options": "1..4",
      "default": 3,
      "description": "The number of products displayed per row"
    },
    {
      "variable": "max_products_per_row_mobile",
      "label": "Maximum products per row (mobile)",
      "type": "select",
      "options": "1..2",
      "default": 2,
      "description": "The number of products displayed per row on small screens"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 36,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Fit to square", "fit-to-square"],
        ["Crop to square", "crop-to-square"]
      ],
      "default": "crop-to-square",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "show_overlay",
      "label": "Product list info",
      "type": "select",
      "options": [
        ["On rollover", "rollover"],
        ["Under image", "under_image"]
      ],
      "default": "under_image",
      "description": "Shows a product's name & price on hover, or under the image"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "product_page_layout",
      "label": "Product page layout",
      "type": "select",
      "options": [
        ["Images on left", "images_left_details_right"],
        ["Images on right", "images_right_details_left"]
      ],
      "default": "images_right_details_left",
      "description": "Sets the display of the Product page"
    },
    {
      "variable": "show_similar_products",
      "label": "Show related products",
      "type": "boolean",
      "default": true,
      "description": "Displays related products on the Product page"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Displays a search field in the footer"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": false,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "show_facebook",
      "label": "Show Facebook's Share button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Share button to the Product page"
    },
    {
      "variable": "show_twitter",
      "label": "Show Twitter's Tweet button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Tweet button to the Product page"
    },
    {
      "variable": "show_pinterest",
      "label": "Show Pinterest's Pin It button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Pin It button to the Product page"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel"
    }
  ],
  "checkout": {
    "optimize_legibility": "optimizeLegibility",
    "header_image_max_width": "400px",
    "header_image_max_height": "200px",
    "antialias_text": "antialiased",
    "header_image": "{{ header }}",
    "background_image": "{{ background }}",
    "background_color": "{{ secondary_background_color }}",
    "gutter_width": "28px",
    "body_font": "{{ primary_font }}",
    "body_font_size": "16px",
    "step_header_font": "{{ primary_font }}",
    "step_header_font_size": "20px",
    "step_header_font_weight": "normal",
    "title_font": "{{ primary_font }}",
    "title_vertical_padding": "40px",
    "title_background_color": "transparent",
    "title_position": "center",
    "title_font_size": "42px",
    "title_font_weight": "normal",
    "title_text_transform": "uppercase",
    "title_color": "{{ primary_text_color }}",
    "secondary_font": "{{ secondary_font }}",
    "secondary_font_size": "15px",
    "content_border_radius": "0",
    "content_header_vertical_padding": "28px",
    "content_background_color": "{{ background_color }}",
    "content_banded": "true",
    "content_header_height": "80px",
    "content_horizontal_padding": "0",
    "content_header_background_color": "{{ background_color }}",
    "content_border_color": "transparent",
    "content_border_width": "0",
    "content_primary_font_size": "24px",
    "content_header_color": "{{ primary_text_color }}",
    "content_color": "{{ primary_text_color }}",
    "link_font_size": "15px",
    "link_color": "{{ primary_text_color }}",
    "link_hover_color": "{{ link_rollover_color }}",
    "error_border_width": "0",
    "error_font_size": "16px",
    "error_background_color": "#b11a2a",
    "error_color": "#ffffff",
    "error_border_radius": "4px",
    "error_border_color": "#b11a2a",
    "custom_inputs": true,
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_border_radius": "4px",
    "input_focus_border_color": "#000000",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#8e8e8e",
    "input_font_size": "16px",
    "input_font": "{{ primary_font }}",
    "input_horizontal_padding": "8px",
    "input_border_width": "2px",
    "input_height": "40px",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "label_text_transform": "normal",
    "label_color": "#999999",
    "label_font_weight": "normal",
    "label_font_size": "16px",
    "in_field_labels": false,
    "button_border_color": "{{ button_background_color }}",
    "button_border_radius": "4px",
    "button_hover_border_color": "{{ button_rollover_color }}",
    "button_height": "47px",
    "button_border_width": "2px",
    "button_font": "{{ primary_font }}",
    "button_font_size": "16px",
    "button_font_weight": "bold",
    "button_text_transform": "uppercase",
    "button_background_color": "{{ button_background_color }}",
    "button_color": "{{ button_text_color }}",
    "button_hover_color": "{{ button_text_color }}",
    "button_position": "center",
    "button_hover_background_color": "{{ button_rollover_color }}",
    "step_inactive_header_color": "opacify({{ primary_text_color }}, .25)",
    "step_border_color": "{{ border_color }}",
    "step_border_width": "2px",
    "step_header_text_transform": "uppercase",
    "step_background_color": "{{ background_color }}",
    "step_inactive_border_color": "opacify({{ border_color }}, .25)",
    "step_primary_font_weight": "normal",
    "step_header_color": "{{ primary_text_color }}",
    "step_header_position": "center",
    "step_inactive_background_color": "{{ background_color }}",
    "step_vertical_padding": "30px",
    "step_primary_font_size": "24px",
    "step_border_style": "solid",
    "step_primary_font": "{{ primary_font }}",
    "summary_inactive_item_border_color": "opacify({{ border_color }}, .25)",
    "summary_font_size": "15px",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_inactive_color": "opacify({{ secondary_text_color }}, .25)",
    "summary_submit_border_color": "opacify({{ border_color }}, .25)",
    "summary_item_border_width": "1px",
    "summary_item_border_color": "{{ border_color }}",
    "summary_secondary_color": "{{ primary_text_color }}",
    "summary_submit_border_width": "1px",
    "summary_item_list_border_color": "{{ border_color }}",
    "summary_inactive_secondary_color": "opacify({{ secondary_text_color }}, .25)",
    "summary_item_list_border_width": "2px",
    "summary_color": "{{ primary_text_color }}",
    "summary_inactive_item_list_border_color": "opacify({{ border_color }}, .25)"
  }
}
